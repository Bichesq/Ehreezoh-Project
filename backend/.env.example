# Application
APP_NAME=Cameroon Traffic App
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration
# Option 1: Supabase (Recommended for development)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Option 2: Railway
# DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST].railway.app:5432/railway

# Option 3: Neon
# DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST].neon.tech/[DATABASE]?sslmode=require

# Option 4: Local Docker (if Docker Desktop is available)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ehreezoh

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
# Option 1: Upstash (Recommended for development)
REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:6379

# Option 2: Railway
# REDIS_URL=redis://default:[PASSWORD]@[HOST].railway.app:6379

# Option 3: Local Docker
# REDIS_URL=redis://localhost:6379/0

REDIS_CACHE_TTL=3600

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]
CORS_ALLOW_CREDENTIALS=True

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]
UPLOAD_DIR=./uploads

# Image Storage (choose one: local, s3, cloudinary)
STORAGE_TYPE=local
# For S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=eu-west-1
# For Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Rate Limiting
RATE_LIMIT_ANONYMOUS=3/day
RATE_LIMIT_REGISTERED=10/day
RATE_LIMIT_TRUSTED=20/day

# Incident Settings
INCIDENT_EXPIRY_TRAFFIC_JAM=1800
INCIDENT_EXPIRY_ACCIDENT=14400
INCIDENT_EXPIRY_ROAD_HAZARD=86400
INCIDENT_AUTO_HIDE_THRESHOLD=-5
INCIDENT_ABUSE_REPORT_THRESHOLD=5

# Geospatial
DEFAULT_SEARCH_RADIUS=5000
MAX_SEARCH_RADIUS=50000
LOCATION_FUZZING_METERS=50

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Celery (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Email (for notifications - optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@trafficcm.app

# Admin
ADMIN_EMAIL=admin@trafficcm.app
ADMIN_PHONE=+237000000000

